@page
@model IndexModel
@{
  ViewData["Title"] = "Members";
}

<div class="container mt-4">
  <h2>Members List</h2>

  <div class="card shadow rounded members-card">
    <div class="card-body p-3">

      <!-- Page size selector + pagination -->
      <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="d-flex align-items-center mb-3">
          <label for="page-size-select" class="me-2 text-nowrap">Page size:</label>
          <select id="page-size-select" class="form-select form-select-sm" style="z-index:50">
            <option value="1">1</option>
            <option value="5" selected>5</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
          </select>
        </div>
        <nav>
          <ul class="pagination page-circle mb-0" id="pagination-controls"></ul>
        </nav>
      </div>

      <!-- Scrollable wrapper -->
      <div id="members-table-header-wrapper">
        <!-- Table Header -->
        <table class="table mb-0" id="members-table-header" style="table-layout: fixed; width:100%;">
          <colgroup>
            <col style="width:70px;">
            <col style="width:150px;">
            <col>
          </colgroup>
          <thead class="sticky-top">
            <tr>
              <th style="text-align:center;">Picture</th>
              <th>Name</th>
              <th>Action</th>
            </tr>
          </thead>
        </table>
      </div>

      <!-- Scrollable Table Body -->
      <div id="members-table-body-wrapper">
        <table class="table mb-0" id="members-table-body" style="table-layout: fixed; width:100%;">
          <colgroup>
            <col style="width:70px;">
            <col style="width:150px;">
            <col>
          </colgroup>
          <tbody>
            <!-- JS populates rows -->
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

@section Scripts {
  <script src="~/js/member.js" asp-append-version="true"></script>
}
@section Styles {
  <link href="~/css/member.css" asp-append-version="true" rel="stylesheet" />
}
